@model FinancialPortal.Models.ChangeNameViewModel
@{
    ViewBag.Title = "Change Name";
}




    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
