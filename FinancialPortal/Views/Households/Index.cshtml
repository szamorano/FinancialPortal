        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>

        <h2>@Model.HouseholdName</h2>


        @foreach (var member in Model.HouseholdMember)
        {
            <p>@member.FullName</p>
        }



       
